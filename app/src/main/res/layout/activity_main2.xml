<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokemon_gradient"
    tools:context="com.daniel.asus.pokemon.Main2Activity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="361dp"
        android:layout_height="344dp"
        android:background="@drawable/pokemon_gradient"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="30dp">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="311dp"
            android:background="@drawable/poke_gradient"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="70dp"
                android:layout_y="8dp"
                android:text="Codigo:"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="70dp"
                android:layout_y="37dp"
                android:text="Nombre:"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="71dp"
                android:layout_y="67dp"
                android:text="Experiencia:"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="71dp"
                android:layout_y="102dp"
                android:text="Habilidad:"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="71dp"
                android:layout_y="137dp"
                android:text="Tipo:"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="71dp"
                android:layout_y="168dp"
                android:text="Altura:"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="72dp"
                android:layout_y="203dp"
                android:text="Peso:"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/codigo"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="9dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombreTextView"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="36dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/experiencia"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="67dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/habilidad"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="101dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tipo"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="136dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/altura"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="168dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/peso"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_x="173dp"
                android:layout_y="203dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_x="116dp"
                android:layout_y="261dp"
                android:onClick="atras"
                android:text="Atras"
                android:textSize="12sp" />

        </AbsoluteLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>